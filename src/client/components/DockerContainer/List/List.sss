@lost flexbox flex

.list
  lost-center: 95%
  & > div
    lost-column: 1/3
  & > div:not(:hover)
    opacity: .9
    transition: opacity .3s
  & > div:hover
    opacity: 1
    transition: opacity .3s

.loading
  display: flex
  justify-content: center

@media (width <= 880px)
  .list
    & > div
      lost-column: 1/2

@media (width <= 580px)
  .list
    & > div
      lost-column: 1/1
