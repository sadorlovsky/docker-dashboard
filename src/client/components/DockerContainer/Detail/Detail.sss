@lost flexbox flex

.container
  lost-center: 95%
  display: flex
  align-items: center
  flex-direction: column
  font-family: 'PT Sans'
  font-size: 1rem
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.15)

.name
  font-size: 1.7rem
  font-weight: bold

.toggle-id
  all: initial
  font-family: 'PT Sans'
  color: #3B60E4
  text-decoration: underline
  cursor: pointer
